<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.howest.marvindeckmyn">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ub_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ub_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniversalBeats"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Universal Beats" />
        <activity
            android:name=".SoldBeatsActivity"
            android:label="Universal Beats" />
        <activity
            android:name=".SettingsActivity"
            android:label="Universal Beats" />
        <activity
            android:name=".RegisterActivity"
            android:label="Universal Beats" />
        <activity
            android:name=".SettingsAvatarActivity"
            android:label="Universal Beats" />
        <activity
            android:name=".SettingsPasswordActivity"
            android:label="Universal Beats" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>